<%= form_for(@user) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br><br>
  <%= f.label :height, "Height (in inches)" %>
  <%= f.number_field :height %>
  <br><br>
  <%= f.label :happiness, "How happy are you? (1 - 5)" %>
  <%= f.number_field :happiness %>
  <br><br>
  <%= f.label :nausea, "How nauseous are you? (1 - 5)" %>
  <%= f.number_field :nausea %>
  <br><br>
  <%= f.label :tickets, "How many tickets do you want?" %>
  <%= f.number_field :tickets%>
  <br><br>
  <%= f.label :admin, "Check if you are an admin" %>
  <%= f.check_box :admin, {}, true %>
  <br><br><br>
  <%= f.submit 'Create User' %>
<% end %>