<h1><%= @attraction.name %></h1>
<br><br>

<%= form_for @user, as: :post, url: "/users/#{@user.id}", method: :patch do |f| %>
  <%= f.hidden_field :tickets, value: @attraction.tickets %>
  <%= f.hidden_field :happiness, value: @attraction.happiness_rating %>
  <input type="hidden", name='attraction[id]' value=<%= "#{@attraction.id}" %> >
  <%= f.submit "Go on this ride" %>
<% end %>

<%= link_to "Edit Attraction", edit_attraction_path(@attraction) if @user.admin %>
